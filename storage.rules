rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to reviewer avatars
    match /reviewers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to review feedback files
    match /audio-feedback/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /video-feedback/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Restrict access to submissions - only authenticated users can read
    match /submissions/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
} 